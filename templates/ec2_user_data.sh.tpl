# Host site config
cat > /etc/nginx/conf.d/${hostname}.conf <<EOF
server {
    listen      443 default_server;
    server_name ${hostname};
    root        /var/www/html;
    index       index.html;
}
EOF

# Reset default index.html
cp /var/www/html/index.nginx-debian.html /var/www/html/index.html

# Restart nginx
systemctl restart nginx